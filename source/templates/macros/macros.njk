{% macro sidebarDefault(heading, icon, title, button) %}
  {% if heading %}
    <h3>{{ heading }}</h3>
  {% elseif not button %}
    <div class="grid-x align-middle align-justify sidebar__item {{isActive}}">
      <i class="material-icons cell shrink">{{ icon }}</i>
      <p class="cell auto">{{ title }}</p>
    </div>
  {% else %}
    <button class="hollow button" type="button" name="button">{{ button }}</button>
  {% endif %}
{% endmacro %}

{% macro projects(icon, title) %}
  <div class="grid-x align-middle align-justify sidebar__item {{isActive}}">
    <i class="material-icons cell shrink">{{ icon }}</i>
    <p class="cell auto">{{ title }}</p>
    <i class="material-icons cell shrink close">keyboard_arrow_down</i>
  </div>
{% endmacro %}

